<!DOCTYPE html>
<html>
<head>
  <title>DesignExchange</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <%= render "layouts/header" %>
</header>

<div class="content">
  <ul>
    <% flash.each do |type, message| %>
      <li class="flash flash-<%= type %>"><%= message %></li>
    <% end %>
  </ul>
  <%= yield %>
</div>

<footer>
  <%= render "layouts/footer" %>
</footer>

</body>
</html>

:javascript
  $(function(){
    $('form#search input').autocomplete(DE.Autocomplete);
  });
%nav.navbar.navbar-default{:role => "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => root_path}
        = image_tag "logo-DE.png", :width => "100", :id => "logo"
    %form#search.navbar-form.navbar-left{:role => "search"}
      .form-group.col-xs-8
        %input.form-control{:placeholder => "Search", :type => "text"}/
      .form-group.col-xs-4
        %button.btn.btn-default{:onclick => "window.location.href = '#{search_design_methods_path}/'+ $('form#search input').val();", :type => "submit"} Search
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li= link_to "Methods", design_methods_path
        %li= link_to "Case Studies", case_studies_path
        / <li><haml_loud> link_to &quot;Discussions&quot;, discussions_path </haml_loud></li>
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = current_user.email
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Profile", user_path(current_user.id)
              %li= link_to "Sets", set_index_path
              %li= link_to "Account Information", edit_user_registration_path
              %li
                %a{"data-target" => "#myModal", "data-toggle" => "modal", :href => "#"}
                  Send Feedback              
              %li.divider
              %li= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'
        - else
          %li
            = link_to "Sign up", new_user_registration_path, :class => 'navbar-link'
          %li= link_to "Login", new_user_session_path, :class => 'navbar-link'
    / /.navbar-collapse
  / /.container-fluid

// display flash errors if any
- flash.each do |type, msg|
  - type = :success if type == :notice
  = content_tag(:div, msg, class: "flash-alert alert alert-#{type}")

#myModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
        %h4#myModalLabel.modal-title Submit Feedback
      - @feedback = Feedback.new
      = form_for @feedback, :html => {:multipart => true} do |f|
        .modal-body
          .field.form-group
            = f.label :name
            = f.text_field :name, :class => "form-control", :placeholder => "Name"
          .field.form-group
            = f.label :email
            = f.email_field :email, :class => "form-control", :placeholder => "Email"
          .field.form-group
            = f.label :subject
            = f.text_field :subject, :class => "form-control", :placeholder => "Subject"
          .field.form-group
            = f.label :message, "Message (required)"
            = f.text_area :content, :class => "form-control", :rows => "5"
        .modal-footer
          = f.submit 'Send', class: 'btn btn-primary'

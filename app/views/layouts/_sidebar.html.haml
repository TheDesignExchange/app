:javascript
  $(function(){
    enableAccordion();
  });
  function enableAccordion(){
    $('.category').find('.category-heading')
               .click(function(){
                var content = $(this).siblings();
                content.toggleClass('in');
              })
  }


:css
  .sidebar-element{
    margin-bottom: 5px;
  }

  .sidebar-leaf{
  	font-weight: normal;
  	display: block;
  }

  .sidebar-maincategory{
  	font-weight: bold;
    cursor: pointer;
  }

  .sidebar{
     text-decoration: none;
     cursor: pointer;
     overflow: hidden;
     margin-right: 0;
     padding-right: 0px;
  }

  .sidebar h5 {
    margin-left:40px;
  }

  .list-group-item {
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .sidebar-element {
      display: inline-block;
      padding-left: 10px;
    }

    .sidebar h5 {
      margin-left: 0px;
    }
  }


%h5 Filter by Design Process

.list-group
  - @search_filter_hash.each do |x|
    - if params[:filter_category].to_i == x.process_order
      = link_to x.name, {:controller => "design_methods", :action => "index", :filter_category => x.process_order},:class=> "list-group-item active"
    - else
      = link_to x.name, {:controller => "design_methods", :action => "index", :filter_category => x.process_order},:class=> "list-group-item"




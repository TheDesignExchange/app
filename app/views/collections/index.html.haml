:css
  .new-collection-button {
    width: 200px;
    height: 60px;
    border: .5px solid #E5E5E5;
    border-radius: 54px;
    box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.25);
    margin-top: 200px;
  }

  .new-collection-button:hover {
    cursor: pointer;
  }

  .collection-button-text {
    font-size: 18px;
    text-align: center;
    position: relative;
    top: 9px;
  }

  .plus {
    display: inline-block;
    color: #6BC06D;
    font-size: 25px;
  }

  .new-collection {
    display: inline-block;
    font-family: Gotham;
    font-weight: bold;
  }

  .filter-box {
    width: 200px;
    height: 120px;
    background-color: #F5F5F5;
    padding: 12px;
    margin-top: 42px;
  }

  .filter-by {
    font-family: Gotham;
    font-weight: bold;
    font-size: 18px;
  }

  .labels {
    margin-top: 12px;
    font-family: Open Sans;
  }

  h1 {
    font-family: Gotham;
    font-weight: bold;
  }

  .title {
    margin-top: 60px;
  }

  .blurb {
    font-family: Open Sans;
    font-size: 18px;
    margin-top: 18px;
  }

  .collection-cards {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 24px;
  }

  .collection-card {
    width: 250px;
    height: 240px;
    border: .5px solid #E5E5E5;
    box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.25);
    margin-bottom: 30px;
  }

  .color {
    height: 120px;
    background-color: #6BC06D;
  }

  .info {
    padding: 12px;
  }

  .class-name {
    font-family: Gotham;
    font-weight: bold;
    font-size: 18px;
  }

  .school {
    font-family: Open Sans;
    font-size: 15px;
  }

  .semester {
    font-family: Open Sans;
    font-size: 15px;
  }

.col-sm-3
  .new-collection-button
    .collection-button-text
      .plus +
      .new-collection New Collection

  .filter-box
    .filter-by Filter By
    .labels
      .public-label Public Collections
      .private-label My Collections


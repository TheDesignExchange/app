:css
  .new-collection-button {
    width: 200px;
    height: 60px;
    border: .5px solid #E5E5E5;
    border-radius: 54px;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    margin-top: 200px;
  }

  .new-collection-button:hover {
    cursor: pointer;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.25);
    /background-color: #F5F5F5;
  }

  .collection-button-text {
    font-size: 18px;
    text-align: center;
    position: relative;
    top: 9px;
  }

  .plus {
    display: inline-block;
    color: #6BC06D;
    font-size: 25px;
  }

  .new-collection {
    display: inline-block;
    font-family: Gotham;
    font-weight: bold;
  }

  .filter-box {
    width: 200px;
    height: 120px;
    background-color: #F5F5F5;
    padding: 12px;
    margin-top: 42px;
  }

  .filter-by {
    font-family: Gotham;
    font-weight: bold;
    font-size: 18px;
  }

  .labels {
    margin-top: 12px;
    font-family: Open Sans;
  }

  h1 {
    font-family: Gotham;
    font-weight: bold;
  }

  .title {
    margin-top: 60px;
  }

  .blurb {
    font-family: Open Sans;
    font-size: 18px;
    margin-top: 18px;
  }

  .collection-cards {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 24px;
  }

  .collection-card {
    width: 250px;
    height: 240px;
    border: .5px solid #E5E5E5;
    box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.25);
    margin-bottom: 30px;
  }

  .color1 {
    height: 120px;
    background-color: #6BC06D;
  }

  .color2 {
    height: 120px;
    background-color: #52C1E7;
  }

  .color3 {
    height: 120px;
    background-color: #FDE667;
  }

  .color4 {
    height: 120px;
    background-color: #C74042;
  }

  .info {
    padding: 12px;
  }

  .class-name {
    font-family: Gotham;
    font-weight: bold;
    font-size: 18px;
  }

  .school {
    font-family: Open Sans;
    font-size: 15px;
  }

  .semester {
    font-family: Open Sans;
    font-size: 15px;
  }

  .nav-tab:hover {
    cursor: pointer;
  }

  li.active a {
    color: black;
  }

  li.active a:hover {
    cursor: default;
  }

.col-sm-3
  .new-collection-button
    .collection-button-text
      .plus +
      .new-collection New Collection

  .filter-box
    .filter-by Filter By
    .labels
      #tabs
        %li.public-label.active.nav-tab
          %a{"data-link" => "public"} Public Collections
        %li.private-label.nav-tab
          %a{"data-link" => "private"} My Collections
        / .public-label Public Collections
        / .private-label My Collections

.tab-pane.col-sm-9.padding{"data-link" => "private"}

.tab-pane.col-sm-9.padding{"data-link" => "public"}
  %h1.title Collections
  .blurb Your methods and case studies relevant to specific courses.
  -if @public_collections.empty?
    %h2.title There are no public collections
  -else
    = will_paginate @public_collections, :param_name => "public_page"
    %ul.collections
      - @public_collections.each do |collection|
        %br
        %li
          -col_path = "/collections/" + collection.id.to_s
          %a{:href => col_path}
            %span.glyphicon.glyphicon-th-list
            .collection-cards
              .collection-card
                .color1
                .info
                  .class-name #{collection.name}
  / .collection-cards
  /   .collection-card
  /     .color1
  /     .info
  /       .class-name ME 110: Introduction to Product Development
  /       .school UC Berkeley
  /       .semester Fall 2018
  /   .collection-card
  /     .color2
  /     .info
  /       .class-name DES INV 190: Design Thinking
  /       .school UC Berkeley
  /       .semester Spring 2017
  /   .collection-card
  /     .color3
  /     .info
  /       .class-name DES INV 15: Introduction to Design Thinking
  /       .school UC Berkeley
  /       .semester Fall 2018
  /   .collection-card
  /     .color4
  /     .info
  /       .class-name DES INV 181/ME 292C-2: Reimagining Mobility
  /       .school UC Berkeley
  /       .semester Fall 2018



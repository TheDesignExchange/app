:javascript
  $(function(){
    $('.tab-pane[data-link ="'+ "all" +'"]').show().siblings(".tab-pane").hide();

    $('.tab-pane[data-link ="'+ "characteristics" +'"]').show().siblings(".tab-pane").hide();

    $('#tabs li a').click(function(e){
      e.preventDefault();
      // Alternate tabs
      $(this).parent()
             .addClass('active')
             .siblings()
             .removeClass('active');
      var link = $(this).data('link');

      // $('.tab-pane[data-link ~="'+ link +'"]').hide();
      $('.tab-pane[data-link ="'+ link +'"]').show().siblings(".tab-pane").hide();
    })
    $("#myTable")
    .tablesorter({ 
    // sort on the first column and third column, order asc 
    sortList: [[0,0],[1,0],[2,0],[3,0],[4,0]]
    });
    .tablesorterPager({container: $("#pager")}); 

  });



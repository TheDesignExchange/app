%h1 Characterisitcs
.row
  / Characteristics

  .col-md-12

    #tabs
      %ul.nav.nav-tabs

        %li.active
          %a{"data-link" => "characteristics"} Characteristics
        %li
          %a{"data-link" => "chargroups"} Characteristic Groups


    / Char Tab
    .tab-pane.col-md-12.padding{"data-link" => "characteristics"}
      .row
        - for char in @characteristics
          .col-md-3
            %li.dropdown{:style => "list-style: none; margin-top: 15px"}
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = char.name

                %b.caret
              %ul.dropdown-menu
      = will_paginate @characteristics, :param_name => 'characteristics_page'


    /  Char-group Tab
    .tab-pane.col-md-12.padding{"data-link" => "chargroups"}
      .row
        - for charGroup in @CharacteristicGroups

          .col-md-3
            %li.dropdown{:style => "list-style: none; margin-top: 15px"}
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = charGroup.name
                %b.caret
              %ul.dropdown-menu
      = will_paginate @CharacteristicGroups, :param_name => 'char_groups_page'


 
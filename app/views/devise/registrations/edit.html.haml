.panel.panel-default.login-margin.panel-primary
  .panel-heading
    %h3.panel-title Account Information
  .panel-body
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
      = devise_error_messages!
      .input
        = f.text_field :username, {:autofocus => true, :placeholder => "Username", :class => "form-control"}
      %br/
      .input
        = f.text_field :first_name, {:autofocus => true, :placeholder => "First Name", :class => "form-control"}
      %br/
      .input
        = f.text_field :last_name, {:autofocus => true, :placeholder => "Last Name", :class => "form-control"}
      %br/
      .input
        = f.email_field :email, {:autofocus => true, :placeholder => "Email", :class => "form-control"}
      %br/
      .input
        = f.text_field :affiliation, {:autofocus => true, :class => "form-control", :placeholder => "Affiliation (optional)"}
      %br/
      .input
        = f.text_field :zip_code, {:autofocus => true, :class => "form-control", :placeholder => "Zip Code (optional)"}
      %br/
      .input
        = f.select :member_type, options_for_select(["Student-Undergraduate","Student-Graduate", "Educator (K-12)", "Educator (College)", "Design Practitioner (Hobbyist)"]), {}, {:class => "form-control"}
      %br/
      .input
        = f.password_field :password, {:autocomplete => "off", :autofocus => true, :placeholder => "New Password", :class => "form-control"}
      %br/
      .input
        = f.password_field :password_confirmation, {:autofocus => true, :placeholder => "New Password Confirmation", :class => "form-control"}
      %br/
      .input
        = f.password_field :current_password, {:autofocus => true, :placeholder => "Current Password", :class => "form-control"}
      %br/
      .row
        .col-md-12= f.submit "Save", {:class => "btn btn-default pull-right"}
= link_to "Cancel my account", registration_path(resource_name), { :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "login-margin"}

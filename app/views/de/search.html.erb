<script>
$(function(){
  $('.tab-pane[data-link ="'+ "all" +'"]').show().siblings(".tab-pane").hide();
  $('#tabs li a').click(function(e){
    e.preventDefault();
    // Alternate tabs
    $(this).parent()
           .addClass('active')
           .siblings()
           .removeClass('active');
    var link = $(this).data('link');

    // $('.tab-pane[data-link ~="'+ link +'"]').hide();
    $('.tab-pane[data-link ="'+ link +'"]').show().siblings(".tab-pane").hide();
  })
});
</script>

<style>
.padding{
  padding-top: 15px;
}
</style>

<!-- TOP BAR -->
<div class = "row">
	<div class="col-md-2">
	</div>
  <div class="col-md-10 left-pad">
  		<h3><%= params['q'].length != 0 ? "Results for '#{params['q']}'": "" %></h3>
      <div id="tabs">
  		<ul class="nav nav-tabs">
  			<li class="active"><a data-link="all">All</a></li>
  			<li><a data-link="dm">Methods</a></li>
  			<li><a data-link="cs">Case Studies</a></li>
  			<li><a data-link="disc">Discussions</a></li>
		</ul>
  </div>
  	</div>
</div>

<!-- CONTENT -->
<div class = "row">
	<div class="col-md-2">
		<%= render "sidebar" %>
	</div>
	<div data-link="all" class="tab-pane col-md-10 padding">
    <% @results[:dm].each do |method| %>
		<%= thumbnail ({:url => "http://web.mit.edu/2.009/www/resources/illustrator/crash-course/productstoryboardex.jpg", :name => method.name.humanize, :tags => method.method_categories.map{|x| x.name}[0..2], :likes => (rand * 100).to_i, :description => method.overview, :id => method.id, :link => "/methods/view"}) %>
    <% end %>
	</div>
  <div data-link="dm" class="tab-pane col-md-10 padding">
    <% @results[:dm].each do |method| %>
    <%= thumbnail ({:url => "http://web.mit.edu/2.009/www/resources/illustrator/crash-course/productstoryboardex.jpg", :name => method.name.humanize, :tags => method.method_categories.map{|x| x.name}[0..2], :likes => (rand * 100).to_i, :description => method.overview, :id => method.id, :link => "/methods/view"}) %>
    <% end %>
  </div>
  <div data-link="cs" class="tab-pane col-md-10 padding">
      <% @results[:cs].each do |cs| %>
    <%= thumbnail ({:url => "http://web.mit.edu/2.009/www/resources/illustrator/crash-course/productstoryboardex.jpg", :name => cs.title, :tags => [], :likes => (rand * 100).to_i, :description => cs.description, :id => cs.id, :link => "/case_studies/view"}) %>
    <% end %>
  </div>
  <div data-link="disc" class="tab-pane col-md-10 padding"></div>
</div>


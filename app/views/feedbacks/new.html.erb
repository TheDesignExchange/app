
<h1>Please let us know what you think!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@feedback) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :type, "Feedback Type" %>
      <div>
        <%= f.select(:type, options_for_select([["BUG", 1], ["USABILITY ISSUE", 2], ["OTHER", 3]])) %>
      </div>
      
      <%= f.label :body, "Feedback" %>
      <%= f.text_area :body, :size => "30x10" %> 

      <%= f.submit "Submit Feedback", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


.panel.panel-default.login-margin.panel-primary
  .panel-heading
    %h3.panel-title Log In
  .panel-body
    .input
      %input.form-control{:placeholder => "Username", :type => "text"}/
    .input
      %input.form-control{:placeholder => "Password", :style => "margin-bottom: 10px;", :type => "password"}/
    .row
      .col-md-8= link_to "Create an account", "/account/register"
      .col-md-4
        %button.btn.btn-default.pull-right{:type => "submit"} Log In

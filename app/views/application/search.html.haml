:css
  .padding{
    padding-top: 15px;
  }
  .nav-tabs{
    cursor: pointer;
  }
  .highlight-methods{
    margin-bottom: 2.5em;
    padding: 15px;
    border-radius: 10px;
    background-color: #B5E7B5;
  }
  .highlight-methods .card{
    background-color: rgba(238,238,238,0.8);
  }
  .highlight-methods .card:hover{
    background-color: rgba(221,221,221,0.8);
  }
/ TOP BAR
.row
  .col-md-2
  .col-md-10.left-pad
    %h3= params[:query] ? "Results for '#{params[:query]}'": ""
    #tabs
      %ul.nav.nav-tabs
        %li.active
          %a{"data-link" => "all"} All
        %li
          %a{"data-link" => "dm"} Methods
        %li
          %a{"data-link" => "cs"} Case Studies

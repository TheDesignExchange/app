  }
  .circle-container a {
    color: #333333;
    display: block;
    position: absolute;
    top: 50%; left: 50%;
    width: 4em; height: 4em;
    margin: -2em; /* 2em = 4em/2 */ /* half the width */
    font-size: 18px;
    color: rgba(0, 0, 0, 0.6);
  }
  .circle-container .center-container {
    color: #333333;
    display: block;
    position: absolute;

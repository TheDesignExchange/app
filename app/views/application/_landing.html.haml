:css
  @import url(//fonts.googleapis.com/css?family=Arvo:700);

  #showcase .row {
    margin-bottom: 10%;
  }


  #showcase .subtitle {
    text-align:center;
    font-size:100%;
    font-family: 'Source Sans Pro', sans-serif;
  }

  #showcase h1 {
    text-align:center;
    font-family: 'Work Sans', sans-serif;
  }

  #showcase h2 {
    margin-bottom:10%;
    font-family: 'Work Sans', sans-serif;
    color: white
  }
  #showcase h3 {
    margin-bottom:10%;
    font-family: 'Work Sans', sans-serif;
    color: white
  }

  #showcase h4 {
    font-size:100%;
    color: white;
    margin-top:-10%;
  }

  .left-padding{
    padding-left: 10px
  }

  #method-background {
    background-image: url("/assets/MethodLandingPage.jpg");
    background-size: contain;
    background-repeat: no-repeat;
    width: 100%;
    height: 0;
    margin-bottom: 28px;
    padding-top: 68.44%; /* (img-height / img-width * container-width) */
                  /* (438 / 640) */
  }
  #method-background .layer {
      background-color: rgba(134, 198, 124, 0.85);
      width: 100%;
      margin-top: -68.44%;
      padding: 10px;
    }

    #casestudies-background {
    background-image: url("/assets/CaseStudyLandingPage.jpg");
    background-size: contain;
    background-repeat: no-repeat;
    width: 100%;
    height: 0;
    margin-bottom: 28px;
    padding-top: 68.44%; /* (img-height / img-width * container-width) */
                  /* (438 / 640) */
  }
  #casestudies-background .layer {
      background-color: rgba(134, 198, 124, 0.85);
      width: 100%;
      margin-top: -68.44%;
      padding: 10px;
    }

  #showcase .col-sm-6 h1 {
    margin-bottom: 0;
  }


  }
  #casestudies-background .layer {
      background-color: rgba(134, 198, 124, 0.85);
      width: 100%;
      margin-top: -68.44%;
      padding: 10px;
    }

  #showcase .col-sm-6 {
    padding-bottom: 20px;
  }

  #showcase .col-sm-6 h1 {
    margin-bottom: 10px;
  }

  #explore {
    margin: 40px 0px 40px 0px;
    display: inline-block;
  }

  #explore .col-sm-4 {
    display: inline-block;
    margin: 0 auto;
  }

  #explore h1{
    text-align:center;
    font-family: 'Montserrat', sans-serif;
    margin: 40px 0px 40px 0px;
  }

  #explore h2{
    text-align:center;
    font-family: 'Montserrat', sans-serif;
  }


  #explore img {
    margin: 20px 20px 20px 20px;
    display: block;
    margin-left: auto;
    margin-right: auto;
    width:auto;
    height:10%;
  }

  #explore p{
    text-align:center;
    font-family: 'Raleway', sans-serif;
    margin: 10px 0px 20px 0px;
    font-size:120%;
  }

  #icons {
    margin: 0 auto;
    padding: 10px;
  }

  #bottom_icons{
    display:block;
    margin: 0 auto;
    padding-left:10%;
    padding-right:10%;
  }

  #bottom_icons .col-sm-4{
     width:50%;
     text-align:center;
  }

  #bottom_icons p{
    text-align:center;
    display:inline-block;
  }

  #bottom_icons img {
    margin: 20px 20px 20px 20px;
    display: block;
    margin-left: auto;
    margin-right: auto;
    width:auto;
    height:10%;
  }

  hr{
    border: solid #d3d3d3 1px;
  }



:css
  body {
    font-family: "Gotham", sans-serif;
  }

  .underline-container {
    position: relative;
    display: inline-block;
    padding-right: 0.5em;
  }
  .underline-container a {
    color: #333333;
  }
  .underline {
    display: block;
    width: 100%;
    position: absolute;
    background-color: #85F85D;
    height: 30%;
    bottom: 5%;
    z-index: -1;
  }
  .underline .hide {
    display: none;
  }

  .navbar{

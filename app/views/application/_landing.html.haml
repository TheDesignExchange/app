  }
  #method-background .layer {
      background-color: rgba(134, 198, 124, 0.85);
      width: 100%;
      margin-top: -68.44%;
      padding: 10px;
    }

    #casestudies-background {
    background-image: url("https://thedesignexchange-staging.s3-us-west-1.amazonaws.com/production/case_studies/201/case-study-201");

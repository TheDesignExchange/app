  @import url(//fonts.googleapis.com/css?family=Arvo:700);
  #showcase .subtitle {
    text-align:center;
    font-size:100%;
    font-family: 'Raleway', sans-serif;
    padding-bottom:10px;
  }

  #showcase h1 {
    text-align:center;

  }

  .our-story-img-container {
    position: relative;
    width: 80%;
  }

  .txt-grp-1 {
    grid-area: txt-grp-1;
  }

  .txt-grp-2 {
    grid-area: txt-grp-2;
  }

  .img-grp-1 {
    grid-area: img-grp-1;
  }

  .img-grp-2 {
    grid-area: img-grp-2;
  }

  #about_1 {
    top: 30px;
    margin-bottom: 20px;
  }

  #about_2 {
    align-self: flex-end;
    top: -30px;
  }


  .our-story-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    box-shadow: 4px 4px 12px rgba(0,0,0,0.25);
    border-radius: 2px;
  }

  .img-back {
    position: absolute;
    border-radius: 2px;
  }

  #img-back-1 {
    left: 25%;
    top: -30px;
  }

  #img-back-2 {
    right: -10%;
    bottom: -20px;
  }

  #img-back-3 {
    left: -5%;
    bottom: -10px;
  }


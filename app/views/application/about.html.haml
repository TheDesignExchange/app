:css
  body {
    font-family: 'Open Sans', sans-serif;
  }
  h1, h2, h3 {
    font-family: 'Playfair Display', serif;
    font-weight: bold;
  }

  hr {
    position: relative;
    z-index: -4;
  }

  .loading-img-container {
    display: flex;
    justify-content: center;
    position: relative;
    top: 60px;
    width: 100%;
  }

  .loading-img {
    height: 35px;
    animation: loading 2s infinite ease 0.2s;
    -ms-animation: loading 2s infinite ease 0.2s;
    -webkit-animation: loading 2s infinite ease 0.2s;
  }

  .about-content {
    opacity: 0;
    transition: 2s ease;
  }

  .about-header {
    text-align: center;
    color: #333333;
  }

  .header-left {
    text-align: left;
  }

  #logo-container {
    background-color: #59595C;
    padding: 20px;
    width: 100%;
    height: 250px;
  }

  #logo-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /*************/
  /* OUR STORY */

  .our-story-container {
    position: relative;
    top:40px;
    /* display: flex;
    justify-content: center; */
    display: grid;
    transition: 1.5s ease;
    grid-template-rows: auto auto;
    grid-template-columns: 40% 60%;
    grid-template-areas:
      "txt-grp-1 img-grp-1"
      "img-grp-2 txt-grp-2"
  }

  .our-story-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 18px;
  }


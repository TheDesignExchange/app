<script> 
	$(function(){
		var pH = $('#create-btn').parent().parent().height()
		var eH = $('#create-btn').height()
		$('#create-btn').css('margin-top', (pH - eH)/2)
	});
</script>

<div class = "row">
	<div class="col-xs-2">

	</div>
  	<div class="col-xs-10 left-pad">
	<div class="col-xs-6">
		<h3>Popular Methods</h3>
	</div>
  	<div class="col-xs-6">
		<button id='create-btn' type="submit" class="btn btn-default pull-right" onclick="window.location.href = '<%= new_design_method_path %>';"><span class="glyphicon glyphicon-plus"></span> Create Method</button>
  	</div>
  	</div>
</div>
<div class = "row">
	<div class="col-xs-2">
		<%= render "/layouts/sidebar", locals: @category_hash = sidebar_hash(:methods) %>
	</div>
  	<div class="col-xs-10 left-pad">
  		<% @design_methods.each do |method| %>
  		 	<%= render "/layouts/thumbnail", locals: @thumb_obj = thumbnail(method,"3") %>
      	<% end %>
  	</div>
</div>


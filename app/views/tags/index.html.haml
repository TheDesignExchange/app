%h1 Listing tags
%table
  %thead
    %tr
      %th Design method
      %th Case study
      %th Discussion
      %th User
      %th Content
      %th
      %th
      %th
  %tbody
    - @tags.each do |tag|
      %tr
        %td= tag.design_method_id
        %td= tag.case_study_id
        %td= tag.discussion_id
        %td= tag.user_id
        %td= tag.content
        %td= link_to 'Show', tag
        %td= link_to 'Edit', edit_tag_path(tag)
        %td= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Tag', new_tag_path

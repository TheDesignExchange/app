<style>
	.fit-all{
		width:100%;
		height:100%;
	}

	.no-padding{
		padding: 0%;
	}
</style>

<!-- Method Name -->
<div class = "row">
	<div class="col-md-9 col-md-offset-3 left-pad">
    <h3><%= @method.name.humanize().split.map(&:capitalize).join(' ') %></h3>
    <p>By <a><%= @author.email %></a></p>
	</div>

</div>
<!-- End Method Name -->

<div class = "row">
    <!-- SIDEBAR -->
	<div id="sidebar" class="col-md-3">
		<div class = "row">
			<h3>What You'll Need</h3>
		</div>

    <!-- PEOPLE -->
		<div class="row">
			<h4>People</h4>
			<p>
				<span class="glyphicon glyphicon-user"></span>
				1 designer
			</p>
			<p>
				<span class="glyphicon glyphicon-user"></span>
				0 users
			</p>
		</div>
    <!-- END PEOPLE -->

    <!-- TOOLS -->
  	<div class="row">
			<h4>Tools</h4>
			<p>
				<span class="glyphicon glyphicon-pencil"></span>
				Pen, Paper, Wireframe tool
			</p>
		</div>
    <!-- END TOOLS -->

    <!-- TIME -->
  	<div class="row">
			<h4>Time</h4>
			<p>
				<span class="glyphicon glyphicon-time"></span>
				~ 1 hour
			</p>
  	</div>
    <!-- END TIME -->

    <!-- TAGS -->
  	<div class="row">
			<div class="panel panel-primary">
      			<div class="panel-heading">
        			Tags
      			</div>
      			<div class="panel-body">
        			<!-- POSSIBLE DO WHILE FOR TAGS -->
              <span class="label label-brainstorming">brainstorming 
        			</span> 
        			<span class="label label-research">research 
        			</span>
              <!-- END POSSIBLE DO WHILE FOR TAGS -->
      			</div>
    	</div>
      <!-- END TAGS -->
  	</div>
	</div>
  	<!-- END SIDBAR -->


    <!-- MAIN VIEW  -->
  	<div class="col-md-9 add-padding">
       	<!-- MENU BAR -->
  		<div class="row">
  			<div class="col-md-3">
  				<span class="glyphicon glyphicon-star"></span>
  				382 likes
  			</div>
  			<div class="col-md-3">
          		<a href="#" class="dropdown-toggle" data-toggle="dropdown">
          			<span class="glyphicon glyphicon-folder-open"></span>
          				Add to Set
          			<b class="caret"></b>
          		</a>
          		<ul class="dropdown-menu">
            		<li><a href="">Add To Set</a></li>
            		<li class="divider"></li>
            		<li><a href="#">My Favorites </a></li>
          		</ul>
  			</div>
  			<div class="col-md-3">
  				<a href="#" class="dropdown-toggle" data-toggle="dropdown">
          				<span class="glyphicon glyphicon-share"></span>
          					Share
          				<b class="caret"></b>
          		</a>
          			<ul class="dropdown-menu">
            			<li><a href="#">Email</a></li>
          			</ul>
  			</div>
  			<div class="col-md-3">
  				<a href="#" class="pull-right">
          				<span class="glyphicon glyphicon-pencil"></span>
          					Edit
          		</a>
  			</div>
  		</div>
      	<!-- END MENU BAR -->

      	<!-- CONTENT -->
  		<div class="row">
  			<img src="http://www.dreamslider.com/portals/0/images/Templates/no-image-available.png" alt="" style="width: 100%; height: 385px;"/>
  		</div>

  		<!-- OVERVIEW & PROCESS -->
  		<div class="row">
  			<h4> Overview </h4>
        	<p><%= @method.overview %></p>
        	<h4> Process </h4>
        	<p><%= @method.process %></p>
    	</div>
    	<!-- END OF OVERVIEW & PROVESS -->

    	<!-- USERS INFORMATION -->

  		<div class="row">
  			<h4> Contributing Authors </h4>
  			<!-- POSSIBLE DO WHILE FOR USERS INFORMATION  -->
  			<div class="col-md-6">
  				<div class="col-md-4">
  					<img alt="" src="http://newsdesk.si.edu/sites/default/files/imagecache/photo_pagewidth/photos/anonymous_silhouette.jpg" class="fit-all"/>
  				</div>
  				<div class="col-md-8">
  					<p><a>Name of person</a></p>
  					<p>Some info</p>
  				</div>
  			</div>
  			<!-- END POSSIBLE DO WHILE FOR USERS INFORMATION  -->
  		</div>
  		<!-- END OF USERS INFORMATIONS -->

  		<!-- DISCUSSION FIELD -->
  		<div class="row">
  			<h4>Discussions</h4>
  			<textarea class="form-control" rows="3" placeholder="Questions or comments about this method?"></textarea>
  			<button type="submit" class="btn btn-default">Submit</button>
  		</div>
  		<!-- END DISCUSSION FIELD -->

  		<!-- DISCUSSIONS -->
  		<div class="row">
  			<!-- !!! PROBABLY A DO WHILE HERE TO LOAD DISCUSSIONS !!! -->
